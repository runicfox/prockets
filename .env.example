# Server
PORT=8080
NODE_ENV=development
# CORS â€“ comma-separated list of allowed origins (dashboard, extension, etc.)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,chrome-extension://your-extension-id

# JWT
JWT_ACCESS_SECRET=replace_with_strong_random_32b
JWT_REFRESH_SECRET=replace_with_strong_random_32b
